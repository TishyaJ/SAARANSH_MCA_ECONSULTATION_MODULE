# PostgreSQL Configuration (Postgres ki settings)
DATABASE_URL=postgresql://user:password@localhost:5432/mca_db

# Environment (NODE_ENV)
NODE_ENV=development

# Server Port (PORT)
PORT=5046

# Twilio Configuration (OTP ke liye)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (notifications ke liye)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# CORS Configuration (frontend access ke liye)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Optional ML API URL (local mock testing ke liye set karein)
# Example: http://localhost:5046/ml/analyze
ML_API_URL=http://localhost:5046/ml/analyze
ML_MODEL_NAME=local-mock-model

# Optional: API Rate Limiting (rate limiting settings)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
